html 
    head 
        title="Table of products"
        link(rel="stylesheet", href="../css/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body 
        main 
            setion(class="h-100 h-custom mb-5 mt-auto")
                div(class="container h-100 py-3")
                    div(class="row d-flex justify-content-center h-100")
                        div(class="col-10")
                            div(class="table-responsive")
                                h1(class="txtCenter txtMed2 fontSpecial")="Table of products"
                                table(class="table fieldset__--margin spBorder")
                                    thead 
                                        tr 
                                            th(scope="col")="Id"
                                            th(scope="col")="Title"
                                            th(scope="col")="Price"
                                            th(scope="col")="Thumbnail"
                                    tbody
                                        if allData
                                            each product in allData
                                                tr 
                                                    td(class="align-middle")= product.id
                                                    td(class="align-middle")= product.title 
                                                    td(class="align-middle")= product.price 
                                                    td(class="align-middle")
                                                        img(class="img-fluid align-middle rounded-3" src=product.thumbnail, alt=product.title, width="30%", height="30%")
                                        else 
                                            tr 
                                                td="No hay productos cargados"
                                form(action="/" method="GET")
                                    input(type="submit" value="Ir al Form")