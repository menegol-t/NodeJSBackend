html 
    head 
        title="Form to POST products"
        link(rel="stylesheet", href="./css/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body 
        main 
            h1(class="txtCenter txtMed2 fontSpecial")="Form to POST products"

            form(action="/api/products" method="POST" class="fieldset__--margin spBorder")

                div(class="form-group fieldset__div--margin txtCenter")
                    label(for="title")="Title"
                    input(type="text" name="title" placeholder="anteojos" class="form-control")

                div(class="form-group  fieldset__div--margin txtCenter")
                    label(for="price")="Price"
                    input(type="number" name="price" placeholder="120" class="form-control -webkit-appearance: none; -moz-appearance: none; appearance: none;" min="0" onkeydown="javascript: return [`Backspace`,`Delete`,`ArrowLeft`,`ArrowRight`].includes(event.code) ? true : !isNaN(Number(event.key)) && event.code!==`Space`")

                div(class="form-group  fieldset__div--margin txtCenter")
                    label(for="thumbnail")="Thumbnail"
                    input(type="text" name="thumbnail" placeholder="https://..." class="form-control")

                div(class="form-group  fieldset__div--margin txtCenter")
                    input(type="submit" value="POST")
            
            form(action="/api/products" method="GET" class="fieldset__--margin")
                input(type="submit" value="Ir a Products")