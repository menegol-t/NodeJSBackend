script(src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.10.1/qs.min.js" integrity="sha512-aTKlYRb1QfU1jlF3k+aS4AqTpnTXci4R79mkdie/bp6Xm51O5O3ESAYhvg6zoicj/PD6VYY0XrYwsWLcvGiKZQ==" crossorigin="anonymous" referrerpolicy="no-referrer")

h1(class="txtCenter txtMed2 fontSpecial")="Chat"

form(id="chatForm" class="container py-5 spBorder")
    div(class="row d-flex justify-content-center") 
        div(class="col-md-8 col-lg-6 col-xl-4")     
            div(class="form-group fieldset__div--margin txtCenter")
                label(for="email")="Email"
                input(id="emailInput" type="text" name="email" placeholder="pepe@gmail.com" class="form-control")

            div(class="form-group  fieldset__div--margin txtCenter")
                label(for="message")="message"
                input(id="textInput" type="text" name="message" placeholder="Hello!" class="form-control")

            div(class="form-group  fieldset__div--margin txtCenter")
                input(type="submit" value="SEND")
section 
    div(class="container py-5") 
        div(class="row d-flex justify-content-center") 
            div(class="col-md-8 col-lg-6 col-xl-4") 
                div(class="card-body" data-mdb-perfect-scrollbar="true" style="position: relative; height: 400px")
                    if msgs 
                        each msg in msgs 
                            div(class="d-flex justify-content-between")
                                p(class="small mb-1")=msg.username  
                                p(class="small mb-1 text-muted")=msg.time  
                            div(class="d-flex flex-row justify-content-start") 
                                div
                                    p(class="small p-2 ms-3 mb-3 rounded-3" style="background-color: #f5f6f7;")=msg.txt 
                    else
                        p="Se el primero en enviar un mensaje!"