html 
    head 
        title="Log in"
        link(rel="stylesheet", href="../css/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body 
        main
            if invalidUser 
                div
                    p=invalidUser 
            h1(class="txtCenter txtMed2 fontSpecial")="Login"
            form(action="/api/login" method="POST" class="fieldset__--margin spBorder" id="login")

                div(class="form-group fieldset__div--margin txtCenter")
                    label(for="username")="Your email"
                    input(id="username" type="text" name="username" placeholder="pepe@gmail.com" class="form-control")
                
                div(class="form-group fieldset__div--margin txtCenter")
                    label(for="password")="Your password"
                    input(id="password" type="password" name="password" placeholder="My super secret password" class="form-control")

                div(class="form-group  fieldset__div--margin txtCenter")
                    input(type="submit" value="Send" class="btn btn-primary" style="height2%;width:7%;")

            a(href="/api/signup" style="margin: auto" type="button" class="txtCenter btn btn-success")="Sign up"