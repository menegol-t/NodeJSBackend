                button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                    span(class="navbar-toggler-icon")
                div(class="collapse navbar-collapse" id="navbarSupportedContent")
                    ul(class="navbar-nav m-auto mb-2 mb-lg-0 txtMed")
                        li(class="nav-item")
                            a(class="nav-link active px-4" aria-current="page" href="/api/products")="Products"
                        li(class="nav-item")
                            a(class="nav-link active px-4" href="/api/cart")="Carts"
                        li(class="nav-item")
                            a(class="nav-link active px-4" href="/api/profile")="Profile"
                        li(class="nav-item")
                            a(class="nav-link active px-4" href="/api/chat")="Chat"
                        li(class="nav-item")
                            a(class="nav-link active px-4" href="/api/logout")="Logout"
        if welcomeSign
            h2(class="txtCenter txtMed2 fontSpecial")=welcomeSign
        else if userData 
            include components/profile
        else if email 
            include components/chatIndex
        else if allData 
            include components/prodIndex