html 
    head 
        title="Sign Up"
        link(rel="stylesheet", href="../css/style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body 
        main
            if error  
                div
                    p=error  
            h1(class="txtCenter txtMed2 fontSpecial")="Signup"
            form(action="/api/signup" method="POST" class="fieldset__--margin spBorder" id="signup")

                div(class="form-group fieldset__div--margin txtCenter")
                    label(for="username")="Your email"
                    input(id="username" type="text" name="username" placeholder="pepe@gmail.com" class="form-control")
                
                div(class="form-group fieldset__div--margin txtCenter")
                    label(for="password")="Your password"
                    input(id="password" type="password" name="password" placeholder="My super secret password" class="form-control")
                
                div(class="form-group fieldset__div--margin txtCenter")
                    label(for="name")="Your name"
                    input(id="nameInput" type="text" name="name" placeholder="Pepe" class="form-control")

                div(class="form-group fieldset__div--margin txtCenter")
                    label(for="location")="Location"
                    input(id="locationInput" type="text" name="location" placeholder="Buenos Aires, Argentina." class="form-control")

                div(class="form-group  fieldset__div--margin txtCenter")
                    label(for="age")="Age"
                    input(id="ageInput" type="number" name="age" placeholder="20" class="form-control -webkit-appearance: none; -moz-appearance: none; appearance: none;" min="0" onkeydown="javascript: return [`Backspace`,`Delete`,`ArrowLeft`,`ArrowRight`].includes(event.code) ? true : !isNaN(Number(event.key)) && event.code!==`Space`")

                div(class="form-group  fieldset__div--margin txtCenter")
                    label(for="phone")="Complete Phone Number"
                    input(id="phoneInput" type="number" name="phone" placeholder="54 9 11 1234 5678" class="form-control -webkit-appearance: none; -moz-appearance: none; appearance: none;" min="0" onkeydown="javascript: return [`Backspace`,`Delete`,`ArrowLeft`,`ArrowRight`].includes(event.code) ? true : !isNaN(Number(event.key)) && event.code!==`Space`")            

                div(class="form-group fieldset__div--margin txtCenter")
                    label(for="profileThumbnail")="Profile Picture Link"
                    input(id="profileThumbnailInput" type="text" name="profileThumbnail" placeholder="https://firebasestorage.googleapis.com/v0/b/aubier-coderhousereact.appspot.com/o/chiquitos%2Ffacebook1.png?alt=media&token=07278c61-f5d1-49cf-ae0b-a81e3f77c2a6" class="form-control")


                div(class="form-group mt-2 fieldset__div--margin txtCenter")
                    input(type="submit" value="Send" class="btn btn-primary mb-3" style="height2%;width:auto;")
                    br
                    a(href="/api/login" style="margin: auto; height:2%;width:auto;" type="button" class="txtCenter mb-3 btn btn-success")="Login"